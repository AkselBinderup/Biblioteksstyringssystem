<Window x:Class="Bibliotekssystem.Bookslist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bibliotekssystem"
        mc:Ignorable="d"
        Title="Books" Height="450" Width="800">
    <Grid>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="247,38,48,43" IsReadOnly="True" FontSize="16"/>
        <TextBox x:Name="TB_ISBNSelected" HorizontalAlignment="Left" Margin="50,253,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="36" FontSize="20"/>
        <TextBlock HorizontalAlignment="Left" Margin="50,215,0,0" TextWrapping="Wrap" Text="ISBN" VerticalAlignment="Top" FontSize="20"/>
        <Button Content="More info" HorizontalAlignment="Left" Margin="50,314,0,0" VerticalAlignment="Top" FontSize="20" Click="Button_Moreinfo_Click"/>
        <Button x:Name="BTN_AddBook" Content="AddBook" HorizontalAlignment="Left" Margin="51,78,0,0" VerticalAlignment="Top" FontSize="20" Click="BTN_AddBook_Click"/>
    </Grid>
</Window>
